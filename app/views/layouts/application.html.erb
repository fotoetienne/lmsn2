<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  
  <title>LetMeSingNow,llc</title>
  <link rel="apple-touch-icon" href="apple-touch-icon.png" />
  <link rel="icon" type="image/ico" href="favicon.ico">
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="description" content="Let Me Sing Now: Sign up for Karaoke from your phone!">
  <meta name="author" content="LetMeSingNow,llc">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>

<div id="header" class="container">
  <div class="row">
    <div class="five columns">
      <%= link_to image_tag("LetMeSingNow.jpg"), root_url %>
    </div>
    <div class="seven columns">
      <ul class="nav-bar">
        <li><% image_tag "LetMeSingNow.jpg" %></li>
        <%= render 'layouts/navigation' %>
      </ul>
    </div>
  </div>
</div>
<div id="main" class="container">
  <div class="row">
    <div class="twelve columns">
      <%= render 'layouts/flash',:flash => flash %>
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
