<h2><%= @dj.name %></h2>
<%= jqm_listview do %>
<li>
<%= form_tag search_dj_songs_path(@dj), method: :get do %>
  <%= jqm_field do %>
    <%= label_tag :query, "Search Songlist:" %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  <% end %>
<% end %></li>
  <li><%= link_to 'Browse Artists', dj_artists_path(@dj) %></li>
  <li><%= link_to 'Browse Songs by title', dj_songs_path(@dj) %></li>
<% end %>

