<% content_for :links_and_includes do %>
  <%= stylesheet_link_tag    "http://code.jquery.com/mobile/1.0.1/jquery.mobile-1.0.1.min.css" %>
  <%= javascript_include_tag "http://code.jquery.com/jquery-1.6.4.min.js" %>
  <%= javascript_include_tag "jquery_ujs" %>
  <%= javascript_include_tag "http://code.jquery.com/mobile/1.0.1/jquery.mobile-1.0.1.min.js" %>
<% end %>

<% content_for :body do %>
  <div data-role="page">
    <%= render 'header' %>
    <div data-role="content" data-theme="e">
      <%= render 'flash',:flash => flash %>
      <%= yield %>
    </div>
    <div data-role="footer" class="ui-bar" data-theme="d">
      <%= switch_user_select if Rails.env.development? or (user_signed_in? and current_user.admin?) %>
    </div>
  </div>
<% end %>
<%= render :template => 'layouts/base' %>
