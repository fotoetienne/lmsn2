<% content_for :links_and_includes do %>
  <%= stylesheet_link_tag    "http://code.jquery.com/mobile/1.0.1/jquery.mobile-1.0.1.min.css" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" %>
  <%= javascript_include_tag "mobile" %>
  <%= javascript_include_tag "http://code.jquery.com/mobile/1.0.1/jquery.mobile-1.0.1.min.js" %>
  <meta name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1" />
<% end %>

<% content_for :body do %>
  <%= jqm_page do %>
    <%= render 'header' %>
    <%= jqm_content :theme => :e do %>
      <%= render 'flash',:flash => flash %>
      <%= yield %>
    <% end %>
    <%= jqm_bar do %>
      <%= switch_user_select  %>
      Params:<%= params %><br />
      Session:<%= session %>
    <% end if session[:su] %>
  <% end %>
<% end %>
<%= render :template => 'layouts/base' %>
